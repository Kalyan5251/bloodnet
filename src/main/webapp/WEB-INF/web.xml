<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>BloodNet - Smart Emergency Blood Donor Network</display-name>
    <description>Emergency blood donor matching platform connecting donors, patients, and hospitals</description>

    <!-- Welcome File List -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <!-- Session Configuration -->
    <session-config>
        <session-timeout>60</session-timeout>
        <cookie-config>
            <http-only>true</http-only>
            <secure>false</secure>
        </cookie-config>
    </session-config>

    <!-- Error Pages -->
    <error-page>
        <error-code>404</error-code>
        <location>/error/404.jsp</location>
    </error-page>
    
    <error-page>
        <error-code>500</error-code>
        <location>/error/500.jsp</location>
    </error-page>
    
    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/error/500.jsp</location>
    </error-page>

    <!-- Security Constraints -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Protected Resources</web-resource-name>
            <url-pattern>/dashboard.jsp</url-pattern>
            <url-pattern>/requestBlood.jsp</url-pattern>
            <url-pattern>/chat.jsp</url-pattern>
            <url-pattern>/admin/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>donor</role-name>
            <role-name>hospital</role-name>
        </auth-constraint>
    </security-constraint>

    <!-- Servlet Mappings -->
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.bloodnet.servlets.RegisterServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.bloodnet.servlets.LoginServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RequestBloodServlet</servlet-name>
        <servlet-class>com.bloodnet.servlets.RequestBloodServlet</servlet-class>
        <load-on-startup>3</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>RequestBloodServlet</servlet-name>
        <url-pattern>/requestBlood</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MatchDonorServlet</servlet-name>
        <servlet-class>com.bloodnet.servlets.MatchDonorServlet</servlet-class>
        <load-on-startup>4</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>MatchDonorServlet</servlet-name>
        <url-pattern>/matchDonors</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ChatServlet</servlet-name>
        <servlet-class>com.bloodnet.servlets.ChatServlet</servlet-class>
        <load-on-startup>5</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ChatServlet</servlet-name>
        <url-pattern>/chat</url-pattern>
    </servlet-mapping>

    <!-- Filter for Request Logging -->
    <filter>
        <filter-name>RequestLoggingFilter</filter-name>
        <filter-class>com.bloodnet.util.RequestLoggingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>RequestLoggingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- Filter for CORS -->
    <filter>
        <filter-name>CORSFilter</filter-name>
        <filter-class>com.bloodnet.util.CORSFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CORSFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- Context Parameters -->
    <context-param>
        <param-name>db.url</param-name>
        <param-value>jdbc:mysql://localhost:3306/bloodnet_db?useSSL=false&amp;serverTimezone=UTC&amp;allowPublicKeyRetrieval=true</param-value>
    </context-param>
    
    <context-param>
        <param-name>db.username</param-name>
        <param-value>root</param-value>
    </context-param>
    
    <context-param>
        <param-name>db.password</param-name>
        <param-value>password</param-value>
    </context-param>
    
    <context-param>
        <param-name>app.name</param-name>
        <param-value>BloodNet</param-value>
    </context-param>
    
    <context-param>
        <param-name>app.version</param-name>
        <param-value>1.0.0</param-value>
    </context-param>

    <!-- MIME Type Mappings -->
    <mime-mapping>
        <extension>json</extension>
        <mime-type>application/json</mime-type>
    </mime-mapping>
    
    <mime-mapping>
        <extension>css</extension>
        <mime-type>text/css</mime-type>
    </mime-mapping>
    
    <mime-mapping>
        <extension>js</extension>
        <mime-type>application/javascript</mime-type>
    </mime-mapping>

    <!-- Application Lifecycle Listener -->
    <listener>
        <listener-class>com.bloodnet.util.ApplicationLifecycleListener</listener-class>
    </listener>

</web-app>
